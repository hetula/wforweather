<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.hetula.w">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:name=".WApplication"
        android:fullBackupContent="@xml/backup_rules"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="xyz.hetula.w.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="xyz.hetula.w.city.CitySelecterActivity"
            android:screenOrientation="portrait" />

        <receiver
            android:name="xyz.hetula.w.weather.WeatherUpdateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="xyz.hetula.UPDATE_WEATHER_TIMELY" />
                <action android:name="xyz.hetula.UPDATE_WEATHER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
